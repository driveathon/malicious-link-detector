{
    "manifest_version": 3,
    "name": "Malicious Link Detector",
    "version": "1.0.0",
    "description": "Real-time malicious link analysis using heuristics and visual AI.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon128.png"
    },
    "icons": {
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}